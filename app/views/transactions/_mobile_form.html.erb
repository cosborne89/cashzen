<%= form_for(@transaction, :html => {:class => "pure-form"})  do |f| %>
  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
      <% @transaction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :title, placeholder: "Title" %>
  </div>
  <div class="field">
    <%= f.select :category_id, grouped_options_for_select(Category.for_select(current_user.id)) %>
  </div>
  <div class="field">
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.text_field :raw_amount, placeholder: "Amount (or equation)" %>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="actions">
    <%= f.submit "Add Transaction", :class => "three-nine-button button is-success" %>
  </div>
<% end %>


