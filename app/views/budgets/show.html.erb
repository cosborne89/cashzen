<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @budget.title %>
</p>

<p>
  <strong>ID:</strong>
  <%= @budget.id %>
</p>
<p>
  <strong>Remaining:</strong>
  <%= @budget.remaining %>
</p>

<p>
  <strong>Month:</strong>
  <%= @budget.date.strftime("%B %Y")%>
</p>

<table class="border-table">
    <tr>
        <th>Transaction</th>
        <th>Date</th>
        <th>Amount</th>
    </tr>
    <% @budget.transactions.each do |transaction|%>
    <tr>
        <td><%= link_to transaction.title, transaction %></td>
        <td><%= transaction.date %></td>
        <td><%= transaction.amount %></td>
    </tr>
    <% end %>
</table>

<%= link_to 'Edit', edit_budget_path(@budget) %> |
<%= link_to 'Destroy', @budget, :confirm => "Are you sure?", :method => :delete %>
<%= link_to 'Back', budgets_path %>
