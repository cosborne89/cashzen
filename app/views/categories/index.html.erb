<h1>Listing categories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Monthly Budget</th>
      <th>Initial Cash</th>
      <th>Reset on</th>
      <th>Net cash</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.title, category %></td>
        <td><%= category.monthly_spend %></td>
        <td><%= category.initial_cash %></td>
        <td><%= category.reset_on %></td>
        <td><%= category.net_cash %></td>
      </tr>
    <% end %>
  </tbody>


<br>

<%= link_to 'New Category', new_category_path %>
