<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :monthly_spend %><br>
    <%= f.text_field :monthly_spend %>
  </div>
  <div class="field">
    <%= f.label :transaction_ids %><br>
    <%= f.text_area :transaction_ids %>
  </div>
  <div class="field">
    <%= f.label :reset_on %><br>
    <%= f.number_field :reset_on %>
  </div>
  <div class="field">
    <%= f.label :initial_cash %><br>
    <%= f.text_field :initial_cash %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>
  <div class="field">
    <%= f.label :spree %><br>
    <%= f.check_box :spree %>
  </div>
  <div class="field">
    <%= f.label :date_if_spree %><br>
    <%= f.date_select :date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
